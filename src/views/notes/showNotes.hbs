  <div class="row">
    {{#if notes}}
      {{#each notes}}
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}}<a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a></h4>
              <p class="card-text">{{description}}</p>
              <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-block">Delete</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    {{ else }}
      <div class="col-md-4 mx-auto mt-3">
        <div class="card text-center">
          <div class="card-body">
            <h4 class="card-title">There are no Notes</h4>
            <a href="/notes/new" class="btn btn-success btn-block">Create One!</a>
          </div>
        </div>
      </div>
    {{/if}}
  </div>