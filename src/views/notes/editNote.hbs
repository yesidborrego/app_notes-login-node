<div class="row">
  <div class="col-md-4 mx-auto mt-3">
    <div class="card text-center">
      <div class="card-header">
        <h3>Edit Note</h3>
      </div>
      <div class="card-body">
        <form action="/notes/edit-notes/{{note._id}}?_method=PUT" method="POST">
          <div class="form-group">
            <input 
              type="text" 
              name="title" 
              placeholder="Insert Title" 
              class="form-control" 
              value="{{note.title}}">
          </div>
          <div class="form-group">
            <textarea 
              name="description" 
              placeholder="Insert Description" 
              class="form-control">{{note.description}}</textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Update Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
