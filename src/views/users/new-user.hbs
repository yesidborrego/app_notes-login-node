<div class="row">
  <div class="col-md-4 mt-3 mx-auto">
    <div class="card text-center">
      <div class="card-header">
        <h3 class="card-title">Account Register</h3>
      </div>
      <div class="card-body">
        <form action="/users/save-user" method="POST">
          <div class="form-group">
            <input type="text" name="name" placeholder="Insert Name" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="email" name="email" placeholder="Insert Email" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="Insert Password" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="confirm_password" placeholder="Confirm Password" class="form-control">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>